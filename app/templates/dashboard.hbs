<Page::Header @title="Dashboard" />
<Page::Content>
    <div class="row">
        <div class="col-lg-6">
            <div class="card p-3">
                <h1>At a glace</h1>
                <div class="m-3">
                    <div class="row">
                        <div class="col-lg-6">
                            <h2>{{customersCount}}</h2>
                            <span class="text-secondary">Customers in pipeline</span>
                        </div>
                        <div class="col-lg-6">
                            <h2>{{customersbudget}}</h2>
                            <span class="text-secondary">Total forecasted budget</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card p-3">
                <CustomersTable @model={{this.sortedCustomers}} @Top5="true"/>
            </div>
        </div>
    </div>
</Page::Content>